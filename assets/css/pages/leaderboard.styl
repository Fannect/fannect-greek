@import "../lib/mixins"
@import "../lib/variables"

#leaderboard-page

   #sign-up
      height: auto

   #leaderboards
      width: 100%
      height: 400px

      .one-half
         height: 100%
         position: relative

   .fraternity
   .sorority
      background: gray
      position: absolute
      top: 0
      bottom: 0
   .fraternity
      left: 0
      right: thick-padding * 3
   .sorority
      left: thick-padding * 3
      right: 0


.chart 
   margin-left: 10px

   rect 
      fill: steelblue
      stroke: white

   text
      fill: #fff
      font-size: .8em
    
a
   display: inline-block
   margin: 0 4px