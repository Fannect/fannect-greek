@import "lib/normalize.css"
@import "lib/variables"
@import "lib/mixins"

@import "../lib/mixins"
@import "../lib/variables"

.top-controls
   text-align: center

.chart-wrap 
   height: 400px
   text-align: center

.chart
   rect 
      fill: steelblue
      stroke: white

   text
      fill: #fff
      font-size: .8em

.bottom-controls
   text-align: center

.sign-up
   margin: 10px auto 30px
   width: 280px
   box-shadow: 0 2px 8px #000
   border-radius: 8px
   padding: thick-padding (normal-padding * 2)
    
   .email
      padding: thin-padding 60px thin-padding thin-padding
      box-shadow: inset 0 1px 4px #333
      border-radius: 8px
      border: none
      -webkit-appearance: none
      &:focus
         outline: none
   .selector
      margin: normal-padding 0
      position: relative
      .selected
         position: relative
         .group-name
            padding: thin-padding 60px thin-padding thin-padding
            box-shadow: inset 0 1px 4px #333
            border-radius: 8px
            &.active
               border-radius: 8px 8px 0px 0px
         .drop-button
            width: 40px
            position: absolute
            right: 0
            top: 0
            bottom: 1px
            border-radius: 0px 8px 8px 0px
            box-shadow: -1px 0 2px #333, 0 1px 2px #333
            background: #fff

            &.active
               border-radius: 0px 8px 0px 0px
               box-shadow: inset 0 1px 4px #333
               bottom: 0
      .list-wrap
         position: absolute
         width: 100%
         border-radius: 0px 0px 8px 8px
         box-shadow: inset 0 0px 4px #333
         max-height: 300px
         background: #fff
      .group-list
         .group-item
            padding: (thin-padding / 2) thin-padding

   .submit-button
      display: block
      padding: normal-padding
      box-shadow: 0 1px 4px #333
      border-radius: 8px
      text-align: center