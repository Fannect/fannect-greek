@import "lib/normalize.css"
@import "lib/variables"
@import "lib/mixins"

@import "../lib/mixins"
@import "../lib/variables"

@font-face
   font-family: JerseyM54
   src: url(../fonts/JerseyM54.ttf)

body
   color: #000

.slider
   position: relative
   font-family: JerseyM54
   .slider-left-button
   .slider-right-button
      position: absolute
      cursor:pointer
      height: 100%
      width: 40px
      top:0
   .slider-left-button
      left: -40px
   .slider-right-button
      right: -40px
   
   .slider-space
      position: relative
      .slider-item
         position:relative;
         z-index: 5
      .slider-cover
      .slider-item
         cursor:pointer
         display: block
         height: 100%
         float: left
      .slider-cover
         position: absolute

.top-section
   background: url(/images/DotBackground.png) 50% 0 no-repeat
   background-size: 1428px 673px
   min-width: 1177px

   .top-wrap
      width: 1177px
      margin: 0 auto

   .title
      font-size: 2.4em
      text-align: center
      color: #ccc
      padding: 15px 0 0
      font-family: JerseyM54

   .top-controls
      text-align: center
      height: 56px
      border: 1px
      margin: 10px auto
      padding: 7px 0 12px
      color: #eee
      background: url(/images/TopSlider.png) 50% 50% no-repeat
      background-size: 1428px 75px 
      .slider
         width: 575px
         margin: 0 auto
         font-size: 1.4em
      .slider-space
         height: 56px
         line-height: 60px
         .slider-cover
         .slider-item
            width: 33.3333333%
         .slider-cover
            background: url(/images/TopSliderCover.png) 50% 50% no-repeat
            background-size: 192px 56px
            border-top: 2px solid #000

   .chart-wrap 
      margin: 36px 0 38px
      height: 377px
      text-align: center
      background: url(/images/GraphBox.png) 50% no-repeat
      background-size: 1177px 377px
   .chart
      margin-top: 12px
      .fraternity
         fill: url(#fraternity-gradient)
      .sorority
         fill: url(#sorority-gradient)
      text
         fill: #fff
         font-size: .8em

   .bottom-controls
      text-align: center
      height: 25px
      width: 300px
      border: 1px
      margin: 10px auto 0
      padding: 5px 45px
      font-size: .8em
      .slider-space
         height: 25px
         line-height: 25px
         .slider-cover
         .slider-item
            width: 25%

.red-separator
   height: 14px
   background: url(/images/RedBand.png) 50% 50% 
   background-size: 1509px 14px
   box-shadow: 0 -2px 4px rgba(0,0,0,.7)
   min-width: 1177px

.bottom-section
   background: url(/images/Pattern_FabricKnit.png)
   background-size: 4px 4px 
   padding: 25px 0 
   box-shadow: 0 3px 10px rgba(0,0,0,.7)
   min-width: 1177px

   .bottom-wrap
      width: 1177px
      margin: 0 auto

.sign-up
   margin: 0 auto
   width: 280px
   box-shadow: 0 2px 8px #000
   border-radius: 8px
   padding: thick-padding (normal-padding * 2)
   background: rgba(0,0,0,.1)
    
   .email
      padding: thin-padding 60px thin-padding thin-padding
      box-shadow: inset 0 1px 4px #333
      border-radius: 8px
      border: none
      -webkit-appearance: none
      &:focus
         outline: none
   .selector
      margin: normal-padding 0
      position: relative
      .selected
         position: relative
         .group-name
            padding: thin-padding 60px thin-padding thin-padding
            box-shadow: inset 0 1px 4px #333
            border-radius: 8px
            &.active
               border-radius: 8px 8px 0px 0px
         .drop-button
            width: 40px
            position: absolute
            right: 0
            top: 0
            bottom: 1px
            border-radius: 0px 8px 8px 0px
            box-shadow: -1px 0 2px #333, 0 1px 2px #333
            background: #fff

            &.active
               border-radius: 0px 8px 0px 0px
               box-shadow: inset 0 1px 4px #333
               bottom: 0
      .list-wrap
         position: absolute
         width: 100%
         border-radius: 0px 0px 8px 8px
         box-shadow: inset 0 0px 4px #333
         max-height: 300px
         background: #fff
      .group-list
         .group-item
            padding: (thin-padding / 2) thin-padding
            margin: 0 2px
            &.selected
               background: #bbb
            &:last-child
               border-radius: 0px 0px 8px 8px
            &:hover
               background: #ddd

   .submit-button
      display: block
      padding: normal-padding
      box-shadow: 0 1px 4px #333
      border-radius: 8px
      text-align: center

.footer
   height: 60px
   background: url(/images/DotBackground.png) 50% 0 no-repeat
   background-size: 1428px 673px